<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bg_more"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/head_more"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/head_default" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_more"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="暂无用户名"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/string_login" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ganhuo.app.widget.LinearItem
                android:id="@+id/item_intergral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/string_intergral" />

            <com.ganhuo.app.widget.LinearItem
                android:id="@+id/item_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/string_answer" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>